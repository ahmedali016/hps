@model HPStask.ViewModel.patient
@{
    ViewBag.Title = "PatientInfo";
}



<div class="col-md-10">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">PatientInfo</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
            @using (Html.BeginForm())
            {
            <div class="box-body">
                <div class="form-group">
                    <label for="patientName">Name</label>
                    @Html.TextBoxFor(model=>model.patientName, new { @class = "form-control" })                    
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    @Html.TextBoxFor(model => model.phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="phone">Birth date</label>
                    <input id="birthdatetxt" type="text" name="birthdate" value="@Model.birthdate" class="form-control" readonly/>
                    <input type="date" name="birthdate" value="" class="form-control" onchange="document.getElementById('birthdatetxt').value=this.value"/>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="mail" id="exampleInputEmail1" value="@Model.mail" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="pass" id="exampleInputPassword1" value="" placeholder="Password">
                </div>
            </div><!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

            }
    </div><!-- /.box -->
    <!-- Form Element sizes -->
  

</div>